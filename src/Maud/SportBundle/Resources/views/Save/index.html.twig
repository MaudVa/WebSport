{# src/Maud/SportBundle/Resources/views/Save/index.html.twig #}


{% extends "MaudSportBundle::layout.html.twig" %}


{% block title %}

  Accueil - {{ parent() }}

{% endblock %}


{% block maudsport_body %}


  <h2>Liste des cours réservés</h2>


  <ul>

    {% for save in listSaves %}

      <li>
          {{ save.cours }}


        à {{ save.club }}, {{save.jour}}
        
        <a href="{{ path('cours_sport_cancel', {'id': save.id,'password':password}) }}" class="btn btn-danger">
					<i class="glyphicon glyphicon-trash"></i>
					Annuler la réservation
				</a>

      </li>

    {% else %}

      <li>Pas (encore !) de cours réservés </li>

    {% endfor %}

  </ul>


{% endblock %}